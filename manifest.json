{
  "manifest_version": 3,
  "name": "GitHub Enhancer",
  "version": "1.0.0",
  "description": "Enhances GitHub repo pages by making README prominent and moving file tree to sidebar",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": [
        "modules/utils.js",
        "modules/repo-actions.js",
        "modules/file-actions.js",
        "modules/collapse-toggle.js",
        "modules/section-indicator.js",
        "modules/import-linkify.js",
        "modules/toc-panel.js",
        "modules/anchor-preview.js",
        "modules/code-collapse.js",
        "modules/lightbox.js",
        "modules/external-links.js",
        "modules/font-controls.js",
        "modules/reading-time.js",
        "modules/repo-preview.js",
        "modules/badge-tooltips.js",
        "content.js"
      ],
      "css": [
        "styles.css",
        "modules/repo-actions.css",
        "modules/file-actions.css",
        "modules/collapse-toggle.css",
        "modules/section-indicator.css",
        "modules/import-linkify.css",
        "modules/toc-panel.css",
        "modules/anchor-preview.css",
        "modules/code-collapse.css",
        "modules/lightbox.css",
        "modules/external-links.css",
        "modules/font-controls.css",
        "modules/reading-time.css",
        "modules/repo-preview.css",
        "modules/badge-tooltips.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
